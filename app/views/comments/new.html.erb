<%= render('layouts/errors', :object => @comment) %>
<h1>Comment</h1>


<%= form_for @comment do |f| %>
<%= hidden_field_tag "comment[link_id]", @link.id %>
<%= hidden_field_tag "comment[parent_comment_id]", @parent_comment.id %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :comment %>
<%= f.text_area :text %>
<%= f.submit %>
<% end %>

