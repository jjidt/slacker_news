<%= render('layouts/jumbo') %>
<%= render('layouts/errors', :object => @link) %>

<h1>Add Link</h1>

<%=form_for @link do |f| %>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, :class => "form-control" %>
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <%= f.submit "Create Link", :class => "btn btn-primary" %>
<% end %>
